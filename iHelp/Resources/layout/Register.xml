<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/registerSwipe">
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/registerLogo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/icon"
			android:scaleType="center"/>
		<TextView
			android:id="@+id/loginTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Регистрация"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="40dp"
			android:textColor="@android:color/black"
			android:alpha="0.75"
			android:textSize="20sp"
			android:textStyle="bold"
			android:layout_below="@id/registerLogo"/>
		<TextView
			android:id="@+id/loginInfo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Введите необходимую информацию"
			android:layout_centerHorizontal="true"
			android:textColor="@android:color/black"
			android:alpha="0.5"
			android:textSize="16sp"
			android:layout_below="@id/loginTitle"/>
		<Spinner
			android:id="@+id/registerCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginHorizontal="70dp"
			android:layout_marginTop="50dp"
			android:prompt="@string/app_name"
			android:popupElevation="10dp"
			android:layout_below="@id/loginInfo"/>
		<EditText
			android:id="@+id/registerSurnameEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="70dp"
			android:layout_below="@id/registerCity"
			android:textSize="16sp"
			android:inputType="textPersonName"
			android:hint="Введите фамилию"/>
		<EditText
			android:id="@+id/registerNameEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="70dp"
			android:layout_below="@id/registerSurnameEdit"
			android:textSize="16sp"
			android:inputType="textPersonName"
			android:hint="Введите имя"/>
		<EditText
			android:id="@+id/registerDateEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_marginHorizontal="70dp"
			android:hint="Дата рождения"
			android:editable="false"
			android:clickable="true"
			android:focusable="true"
			android:focusedByDefault="false"
			android:layout_below="@id/registerNameEdit"/>
		<EditText
			android:id="@+id/registerEmailEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="70dp"
			android:layout_below="@id/registerDateEdit"
			android:textSize="16sp"
			android:inputType="textEmailAddress"
			android:hint="Введите электронную почту"/>
		<EditText
			android:id="@+id/registerPasswordEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="70dp"
			android:layout_below="@id/registerEmailEdit"
			android:textSize="16sp"
			android:inputType="textPassword"
			android:hint="Введите пароль"/>
		<EditText
			android:id="@+id/registerRepeatPasswordEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="70dp"
			android:layout_below="@id/registerPasswordEdit"
			android:textSize="16sp"
			android:inputType="textPassword"
			android:hint="Повторите пароль"/>
		<Button
			android:id="@+id/registerButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Регистрация"
			android:textStyle="bold"
			android:textColor="@color/white"
			android:layout_below="@id/registerRepeatPasswordEdit"
			android:layout_marginHorizontal="100dp"
			android:background="@drawable/roundbutton"
			android:layout_marginTop="50dp"/>
		<TextView
			android:id="@+id/registerLoginButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Уже зарегистрированы? Вход"
			android:layout_below="@id/registerButton"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"/>
	</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>