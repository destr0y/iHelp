<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/profileSwipe">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/profileTitle"
			android:id="@+id/imageView1" />
		<TextView
			android:id="@+id/profileTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:textColor="@android:color/black"
			android:textStyle="bold"
			android:text="Профиль"/>
		<TextView
			android:id="@+id/nameLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@android:style/TextAppearance.Medium"
			android:layout_marginLeft="18dp"
			android:layout_marginTop="20dp"
			android:textColor="@color/green"
			android:textStyle="bold"
			android:layout_below="@id/profileTitle"
			android:text="Фамилия Имя"/>
		<TextView
			android:id="@+id/ageLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@android:style/TextAppearance.Small"
			android:layout_marginLeft="18dp"
			android:layout_below="@id/nameLabel"
			android:text="Возраст"/>
		<TextView
			android:id="@+id/cityLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@android:style/TextAppearance.Small"
			android:layout_marginLeft="18dp"
			android:layout_below="@id/ageLabel"
			android:text="Город"/>
		<Button
			android:layout_width="160dp"
			android:layout_height="30dp"
			android:layout_marginTop="10dp"
			android:layout_below="@id/cityLabel"
			android:layout_marginLeft="18dp"
			android:text="Выйти из профиля"
			android:background="@drawable/roundbutton"
			android:textAppearance="@style/MyButtonStyle"
			android:id="@+id/logoutButton" />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/grey"
			android:layout_below="@id/logoutButton"
			android:layout_marginTop="10dp"
			android:id="@+id/profileInfoBlockStart"/>
		<LinearLayout
			android:id="@+id/infoBlock"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/profileInfoBlockStart"
			android:gravity="center_horizontal"
			android:orientation="horizontal"
			android:layout_marginTop="20dp">
			<LinearLayout
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_marginRight="20dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Рейтинг"
					android:textColor="@color/purple"/>
				<TextView
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:text="55"
					android:layout_marginTop="5dp"
					android:gravity="center"
					android:id="@+id/profileRating"
					android:background="@drawable/textincircle"/>
			</LinearLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_marginRight="20dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Выполнено запросов"
					android:textColor="@color/purple"/>
				<TextView
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:text="55"
					android:layout_marginTop="5dp"
					android:gravity="center"
					android:id="@+id/profilePerformedRequests"
					android:background="@drawable/textincircle"/>
			</LinearLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:gravity="center">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Создано запросов"
					android:textColor="@color/purple"/>
				<TextView
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:text="55"
					android:layout_marginTop="5dp"
					android:gravity="center"
					android:id="@+id/profileCreatedRequests"
					android:background="@drawable/textincircle"/>

			</LinearLayout>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/grey"
			android:layout_below="@id/infoBlock"
			android:layout_marginTop="20dp"
			android:id="@+id/infoBlockEnd"/>
		<TextView
			android:id="@+id/registerReviewTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/infoBlockEnd"
			android:text="Отзывы"
			android:textColor="@color/green"
			android:textStyle="bold"
			style="@android:style/TextAppearance.Medium"
			android:gravity="center_horizontal"
			android:layout_marginTop="5dp"/>
		<android.support.v7.widget.RecyclerView
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginHorizontal="10dp"
			android:layout_below="@id/registerReviewTitle"
			android:id="@+id/reviewsRecycler" />
	</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>